int name()
{
    cout << "Please enter your first name" <<endl;
    cin >> first_name;
    cout << "Please enter your last name" <<endl;
    cin >> last_name;
    cout << "Please enter your gender - male(m),female(f),other(o)" <<endl;
    cin >> gender;
    while (gender != 'm' && gender != 'f' && gender != 'o')
    {
       cout << "Please enter a valid gender - male(m)";
       cin >> gender;
    }
    switch (gender)
    {
    case 'm':
        prefix = "Mr.";
        break;
    case 'f':
        prefix = "Ms.";
        break;
    case 'o':
        prefix = "Mx.";
        break;
    }//end of switch gender
}//end of name module
int membership()
{
    cnt1 = 'y';
    while (cnt1 == 'y' && cnt1 != 'x')
    {
    cout << "Do you have a BSEU Cafe Membership? (y/n)"<<endl;
    cin >> member;
    if (member == 'n')
        cnt1 = 'n';
    if (member =='y')
    {
        cout << "Please enter BSEU Cafe Membership ID" <<endl;
        cin >> id;
        switch (id)
        {
        case 110044696:
            first_name = "Cestlly";
            last_name = "Coronado";
            prefix = "Mr.";
        cout << "ID Accepted = " <<id<<endl;
        cnt1 = 'x';
        break;
        case 110043589:
            first_name = "Joshua";
            last_name = "Kang";
            prefix = "Mr.";
        cout << "ID Accepted = " <<id<<endl;
        cnt1 = 'x';
        break;
        case 110043541:
            first_name = "Daniel";
            last_name = "Shammah";
            prefix = "Mr.";
        cout << "ID Accepted = " <<id<<endl;
        cnt1 = 'x';
        break;
        case 110042724:
            first_name = "Shohin";
            last_name = "Rahmonov";
            prefix = "Mr.";
            cout << "ID Accepted = " <<id<<endl;
            cnt1 = 'x';
        break;
        default:
            cout << "Invalid ID - " <<id<<endl<< "Please check at the nearest BSEU Cafe branch to check your membership status"<<endl;
            member = 'n';
            cout << "Do you wish to continue using this menu program? (y/n)"<<endl;
            cin >> cnt1;
        break;
        }//end of switch
    }//end of if
    } //end of while
}//end of module
